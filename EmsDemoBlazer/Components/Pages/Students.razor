<table class="table table-striped">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < students.Count; i++)
        {
            var student = students[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.City</td>
                <td>@student.State</td>
                <td>@student.Country</td>
                <td>
                    <button class="btn btn-warning btn-sm me-2" @onclick="() => Edit(student)">Edit</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => Delete(student.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<Student> students = new();
    Student current = new();
    bool isEdit = false;
    bool showModal = false;


    protected override async Task OnInitializedAsync()
    {
        students = await StudentService.GetAll();
    }

    async Task Save()
    {
        if (isEdit)
        {
            await StudentService.Update(current);
            await JS.InvokeVoidAsync("showSuccess", "Student updated successfully");            
        }
        else
        {
            await StudentService.Add(current);
            await JS.InvokeVoidAsync("showSuccess", "Student added successfully");
                       
        }

        await Reload();
        CloseModal();
    }
    void OpenAdd()
    {
        Reset();
        showModal = true;
    }
    void Edit(Student student)
    {
        current =  new Student
        {
            Id = student.Id,
            Name = student.Name,
            Age = student.Age,
            Email = student.Email,
            Phone = student.Phone,
            City = student.City,
            State = student.State,
            Country = student.Country
        };
        isEdit = true;
        showModal = true;
    }

    async Task Delete(int id)
    {
        var confirmed = await JS.InvokeAsync<bool>("showConfirm");

        if (!confirmed)
            return;
        await StudentService.Delete(id);
        await Reload();
        await JS.InvokeVoidAsync("showSuccess", "Student deleted successfully");

    }

    async Task Reload()
    {
        students = await StudentService.GetAll();
    }
    void CloseModal()
    {
        showModal = false;
        Reset();
    }

    void Cancel()
    {
        Reset();
    }
    void Reset()
    {
        current = new();
        isEdit = false;
    }
}
