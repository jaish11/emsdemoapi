@page "/students"

@using EmsDemoBlazer.Models
@using EmsDemoBlazer.Services
@inject StudentApiService StudentService
@inject IJSRuntime JS

<h3>Students</h3>
<button class="btn btn-primary mb-3" @onclick="OpenAdd">
    + Add Student
</button>

@if (showModal)
{
    <div class="modal-backdrop fade show"></div>

    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        @(isEdit ? "Edit Student" : "Add Student")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <EditForm Model="@current" OnValidSubmit="Save">
                    <DataAnnotationsValidator />

                    <div class="modal-body">
                        <input class="form-control mb-1" placeholder="Name" @bind="current.Name" />
                        <ValidationMessage For="@(() => current.Name)" />

                        <input class="form-control mb-1" type="number" placeholder="Age" @bind="current.Age" />
                        <ValidationMessage For="@(() => current.Age)" />

                        <input class="form-control mb-1" placeholder="Email" @bind="current.Email" />
                        <ValidationMessage For="@(() => current.Email)" />

                        <input class="form-control mb-1" placeholder="Phone" @bind="current.Phone" />
                        <ValidationMessage For="@(() => current.Phone)" />

                        <input class="form-control mb-1" placeholder="City" @bind="current.City" />
                        <ValidationMessage For="@(() => current.City)" />

                        <input class="form-control mb-1" placeholder="State" @bind="current.State" />
                        <ValidationMessage For="@(() => current.State)" />

                        <input class="form-control mb-1" placeholder="Country" @bind="current.Country" />
                        <ValidationMessage For="@(() => current.Country)" />
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" @onclick="CloseModal">
                            Cancel
                        </button>
                        <button class="btn btn-success" type="submit">
                            @(isEdit ? "Update" : "Save")
                        </button>
                    </div>
                </EditForm>

